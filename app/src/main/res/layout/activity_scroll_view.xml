                android:layout_marginEnd="4dp"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="15" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:layout_marginEnd="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="16" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/horizontalscrollview"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#E2E8CE"
        />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is Vertical Scroll View"
        android:layout_below="@id/view"
        android:textColor="#E2E8CE"
        android:textSize="20sp"
        android:layout_above="@id/verticalscrollview"
        />

    <ScrollView
        android:id="@+id/verticalscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttomLinearlayout"
        android:layout_below="@id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
