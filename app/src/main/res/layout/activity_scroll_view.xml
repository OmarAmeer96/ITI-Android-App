                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="7" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="8" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="9" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="10" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="11" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="12" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="13" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="14" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="15" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="16" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="17" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A26769"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="18" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttomLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="back2widget"
            android:text="Back to Previous Activity"
            android:backgroundTint="#FF7F11"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
</RelativeLayout>