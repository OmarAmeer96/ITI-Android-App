            android:text="4"
            android:onClick="button10_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="5"
            android:onClick="button11_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="6"
            android:onClick="button12_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:onClick="button13_action"
            android:backgroundTint="#614747"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#614747"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="1"
            android:onClick="button14_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="2"
            android:onClick="button15_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="3"
            android:textColor="@color/white"
            android:onClick="button16_action"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_17"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#614747"
            android:text="+"
            android:onClick="button17_action"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#614747"
