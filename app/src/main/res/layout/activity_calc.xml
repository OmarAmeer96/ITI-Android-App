        <Button
            android:id="@+id/button_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="#614747"
            android:text="+/-"
            android:onClick="button18_action"
