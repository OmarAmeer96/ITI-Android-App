<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="25dp"
            android:text="@string/buttons_for_all_topics"
            android:textAllCaps="false"
            android:textColor="#ACBFA4"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:text="Toast"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:text="Log"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_calc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Simple Calculator"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Explicit Intent"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_toast_user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:text="Show Toast with the Data from User"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_teams"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Teams Login Page"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_life"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Life Cycle"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_implicit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Implicit Intent"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_shared"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Shared Preferences"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_file"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="File I/O"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_controls"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#A26769"
            android:textColor="@color/white"
            android:text="Controls"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#AE0E0E"
            android:textColor="@color/white"
            android:text="Close App"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/my_logo" />
    </LinearLayout>

</LinearLayout>